<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:orientation="vertical"
    tools:context="com.advanstar.cvc.cvcbeacons.PinConfirmation">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/textview2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30px"
            android:paddingBottom="20px"
            android:gravity="center"
            android:text="A security pin has been sent to your phone. Please enter it to complete your registration."/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <EditText android:id="@+id/edit_pin_number"
            android:inputType="numberPassword"
            android:digits="0123456789"
            android:singleLine="true"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/edit_pin_number" />

        <Button
            android:id="@+id/submit_pin_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_send"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="50px"
        >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="300px"
            android:layout_gravity="center"
            android:scaleType="center"
            android:layout_centerInParent="true"
            android:src="@drawable/logo_cvc"/>

    </LinearLayout>
</LinearLayout>

