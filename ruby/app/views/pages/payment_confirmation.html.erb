<% content_for :additional_body_css_classes do %>skip-resize-canvas<% end %>

<% content_for :main do %>
  <div id="main" class="">

    <form class="page-layout-1">
      <div class="content-outer">
        <div class="content">
            <h1 class="style-1">CONGRATULATIONS!</h1>
            You’ve completed your purchase:
            <ul class="summary-list cf border-bottom-style-1 ">
              <li>
                <div class="price">$39.95</div>
                Mind Flex Plan
              </li>
            </ul>

            <h2 class="style-1">Receive Notifications</h2>
            Ocassionally, we’ll need to send you notifications and alerts via email & SMS. Please provide your email & phone number.

            <div>
              <input class="text-input-3" name="email" placeholder="Your email address" />
            </div>

            <div>
              <input class="text-input-3" name="phone" placeholder="Your phone number" />
            </div>

            <div class="border-bottom-style-1">
              <input type="checkbox" name="confirm" class="vertical-top" /> Send me app updates &amp; Alerts
            </div>

            <div class="button-container">
              <a href="#" class="btn btn-border-simple lime btn-block size-plus-1" id="start-button">Continue</a>
            </div>


        </div>
      </div>
    </form>

  </div> <!-- main -->
<% end %>

<% content_for :footer do %>
  <%= render 'layouts/pages/footer' %>
<% end %>
