  <%= render "three_sixty_assessments/question_side_description" %>

  <h3 class="style-2" style="padding-bottom:20px;">
    <span class="pam-question" app-data-question-index="0" style="display:block;"><%="#{ process_substitutions(question.text, @subject)}..." %></span>
  </h3>

  <ul class="answer-list" style="display:none;">
    <% question.response_descriptions.each_pair do |response_index, response_description| %>
      <li class="answer-<%=response_index%>"><%=response_description%></li>
      <% end %>

  </ul>
  <span class="submit-value"><%= hidden_field_tag "answers[#{question.uuid}]", "" %></span>

  <div class="desktop-focus-area">
    <div class="answer-label">Neutral</div>
    <div class="question-slider-container"><div class="question-slider-track"><div class="question-slider"></div></div></div>
  </div>

  <div class="question-button-container cf">
    <div class="back-button-container visible-desktop back-link" style=""><a href="#" class="button-blue-arrow-left">Back</a></div>
    <div class="continue-button-container">
      <a href="#" class="btn next btn-block btn-border-simple size-plus-1 lime-2 pill btn-right-arrow">Continue</a>
    </div>
  </div>
