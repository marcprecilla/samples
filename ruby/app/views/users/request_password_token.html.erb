<% content_for :header_bar do %>

<input type="button" href="action:previousState" id="navbar-button-left" class="navbar-button back" app-data-state="app" value="Previous" />
<span id="title">Password Reset</span>

<% end %>


<% if flash.alert %>
<div class="alert alert-error alert-block">
  <%= flash.alert %>
</div>
<% end %>

<div class="well">
  <%= form_tag password_path, method: :post do %>
    <%= label_tag :email %>
    <%= email_field_tag :email, @email %>

    <div class="actions">
      <%= submit_tag 'Request Password Reset Instructions', class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
